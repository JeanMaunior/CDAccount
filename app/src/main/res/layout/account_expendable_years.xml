<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/account_expendable_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/account_expendable_year_maintime"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="2020年"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginStart="20dp"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/account_expendable_year_subtime"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:text=" "
                    android:layout_marginStart="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/account_expendable_year_totalmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:layout_marginStart="30dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/account_expendable_year_text_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收入"
                        android:textSize="10sp"
                        android:textColor="@color/app_color_theme_5"
                        android:layout_marginStart="35dp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/account_expendable_year_income"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="000"
                        android:textColor="@color/app_color_theme_5"
                        android:layout_marginStart="5dp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/account_expendable_year_text_outcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支出"
                        android:textSize="10sp"
                        android:textColor="@color/app_color_theme_1"
                        android:layout_marginStart="10dp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/account_expendable_year_outcome"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="000"
                        android:textColor="@color/app_color_theme_1"
                        android:layout_marginStart="5dp"
                        tools:ignore="SmallSp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                tools:ignore="RtlHardcoded">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/year_indicator"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="end|center"
                    app:srcCompat="@drawable/icon_arrow_right_grey" />

            </LinearLayout>


        </LinearLayout>

        <com.xuexiang.xui.widget.layout.ExpandableLayout
            android:id="@+id/expandable_year_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toast_default_text_color"
            app:el_duration="300"
            app:el_expanded="false"
            tools:ignore="PrivateResource">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/year_expand_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

        </com.xuexiang.xui.widget.layout.ExpandableLayout>


    

</LinearLayout>