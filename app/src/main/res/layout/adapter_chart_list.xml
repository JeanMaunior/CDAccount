<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adapter_chart_list_card"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="7dp"
    android:layout_marginEnd="9dp"
    app:cardBackgroundColor="@color/xui_config_color_white"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables,UselessParent">

                <TextView
                    android:id="@+id/adapter_chart_list_position"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/adapter_chart_list_title"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/adapter_chart_list_money"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="end"
                    android:text="@string/account_origin"
                    android:textSize="15sp"
                    android:textColor="@color/app_color_theme_6"/>


            </LinearLayout>

            <com.xuexiang.xui.widget.progress.materialprogressbar.MaterialProgressBar
                android:id="@+id/adapter_chart_list_progressbar"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:progress="30"
                app:mpb_progressStyle="horizontal" />

        </LinearLayout>


    </FrameLayout>

</androidx.cardview.widget.CardView>