<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="?attr/xui_config_content_spacing_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/item_title1"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="标题一"
            android:textSize="15sp"
            android:textColor="@color/app_color_theme_10"
            android:layout_marginRight="10dp"/>

        <com.xuexiang.xui.widget.spinner.editspinner.EditSpinner
            android:layout_gravity="center"
            android:id="@+id/es_item1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />
    </LinearLayout>


</LinearLayout>