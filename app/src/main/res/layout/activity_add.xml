<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:padding="10dp">

            <com.xuexiang.xui.widget.button.shadowbutton.ShadowImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_web_back"
                app:sb_shape_type="round" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            android:padding="5dp">
            <!--TextView
                android:id="@+id/tv_add_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="18sp" /-->
            <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>


        <!--收支-->
        <RadioGroup
            android:layout_gravity="center|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_record_type"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >

            <RadioButton
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/rb_in"
                android:text="收入"
                android:button="@null"
                android:background="@drawable/selector_record_type"
                android:checked="true"
                android:textSize="18sp"
                android:textColor="#323232"
                android:layout_marginRight="5dp"/>
            <RadioButton
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/rb_out"
                android:text="支出"
                android:button="@null"
                android:background="@drawable/selector_record_type"
                android:textSize="18sp"
                android:textColor="#323232"
                android:layout_marginLeft="5dp"/>
        </RadioGroup>

        <!--金额-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_amount"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="10dp"
                android:textSize="25sp"
                android:textColor="#000000"
                android:hint="金额"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_amount"
                android:drawableEnd="@drawable/ic_yuan"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:maxLines="1"
                />
        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <!--时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_calender"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="时间"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"/>
                <TextView
                    android:id="@+id/tv_datatime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center_vertical"
                    android:text="时间"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:background="@drawable/bg_amount"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:maxLines="1"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!--分类-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_type"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="分类"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp"/>
                <TextView
                    android:id="@+id/tv_first_type"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center_vertical"
                    android:text="一级分类"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:background="@drawable/bg_amount"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:maxLines="1"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tv_second_type"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center_vertical"
                    android:text="二级分类"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:background="@drawable/bg_amount"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:maxLines="1"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>





        </LinearLayout>

    </ScrollView>

</LinearLayout>