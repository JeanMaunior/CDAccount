            <!--账户-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_account1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_account" />

                <TextView
                    android:id="@+id/tv_account_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toEndOf="@id/iv_account1"
                    android:gravity="center"
                    android:text="转出账户"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_account1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toEndOf="@+id/tv_account_title1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="现金账户"
                    android:background="@drawable/bg_bottom_border"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:foreground="?selectableItemBackground"/>

                <com.xuexiang.xui.widget.button.shadowbutton.ShadowImageView
                    android:id="@+id/btn_new_account1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    app:sb_shape_type="round"
                    app:srcCompat="@drawable/ic_add" />
            </RelativeLayout>


            <!--账户-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_account2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_account" />

                <TextView
                    android:id="@+id/tv_account_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toEndOf="@id/iv_account2"
                    android:gravity="center"
                    android:text="转入账户"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_account2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toEndOf="@+id/tv_account_title2"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="现金账户"
                    android:background="@drawable/bg_bottom_border"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:foreground="?selectableItemBackground"/>

                <com.xuexiang.xui.widget.button.shadowbutton.ShadowImageView
                    android:id="@+id/btn_new_account2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    app:sb_shape_type="round"
                    app:srcCompat="@drawable/ic_add" />
            </RelativeLayout>

            <!--成员-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_member"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_member" />

                <TextView
                    android:id="@+id/tv_member_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toEndOf="@id/iv_member"
                    android:gravity="center"
                    android:text="    成员    "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_member"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toEndOf="@+id/tv_member_title"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="本人"
                    android:background="@drawable/bg_bottom_border"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:foreground="?selectableItemBackground"/>

                <com.xuexiang.xui.widget.button.shadowbutton.ShadowImageView
                    android:id="@+id/btn_new_member"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    app:sb_shape_type="round"
                    app:srcCompat="@drawable/ic_add" />
            </RelativeLayout>

            <!--备注-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_remark"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_remark" />

                <TextView
                    android:id="@+id/tv_remark_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toEndOf="@id/iv_remark"
                    android:gravity="center"
                    android:text="    备注    "
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_remark"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toEndOf="@+id/tv_remark_title"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:hint="商家/地点/项目/其他"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </RelativeLayout>


